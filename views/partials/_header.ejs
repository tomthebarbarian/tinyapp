<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <% if (username) { %>
          <a class="nav-item nav-link"> Logged in as: <%= username %> </a>
          <a class="nav-item nav-link">
            <form  action="/logout" method="POST">
              <button type="submit" class="btn btn-primary">logout</button>
            </form>
          </a>
          <a class="nav-item nav-link" href="/urls">My URLs</a>
          <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
  
        <% } else { %>

          <a class="nav-item nav-link">
            <h2>login</h2>
            <form  action="/login" method="POST">
              <div>
                <label for="username">Username:</label>
                <input class="form-control" type="text" name="username" placeholder="tomthebarb" style="width: 300px; margin: 1em">
                <label for="pass">Password: </label>
                <input class="form-control" type="text" name="pass" placeholder="abc123" style="width: 300px; margin: 1em">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </form>
          </a>
          <a class="nav-item nav-link">
            <h2>register</h2>
            <form  action="/register" method="POST">
              <div>
                <label for="username">Username:</label>
                <input class="form-control" type="text" name="username" placeholder="tomthebarb" style="width: 300px; margin: 1em">
                <label for="pass">Password: </label>
                <input class="form-control" type="text" name="pass" placeholder="abc123" style="width: 300px; margin: 1em">
                <button type="submit" class="btn btn-primary">Submit</button>
              </div>
            </form>
          </a>
        <% }%>

        
      </div>
    </div>
  </nav>
</header>